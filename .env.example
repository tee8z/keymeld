# KeyMeld Environment Configuration
# Copy this file to .env and modify as needed

# Environment: dev, prod
KEYMELD_ENV=dev

# Development settings (KEYMELD_ENV=dev)
# - Uses regtest Bitcoin network
# - Local services only
# - Relaxed security settings

# Production settings (KEYMELD_ENV=prod)
# - Uses Mutinynet signet network
# - Real AWS KMS (requires AWS credentials)
# - Production security settings
# - External blockchain APIs


# Docker Compose overrides
COMPOSE_PROJECT_NAME=keymeld
COMPOSE_FILE=docker-compose.yml

# AWS Configuration (for prod environment)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-west-2

# Logging
RUST_LOG=info,keymeld_gateway=debug,keymeld_enclave=debug

# Port Configuration (optional overrides)
# KEYMELD_GATEWAY_PORT=8090
# KEYMELD_ESPLORA_PORT=3002
# KEYMELD_BITCOIN_PORT=18443

# Volume Configuration
KEYMELD_DATA_DIR=./data
KEYMELD_CONFIG_DIR=./config
KEYMELD_KEYS_DIR=./keys

DATABASE_URL=sqlite:/home/path/to/sqlite_db
