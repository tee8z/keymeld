# KeyMeld Example Configuration
# Copy this file to config.yaml and adjust as needed

# Bitcoin network to use (mainnet, testnet, signet, regtest)
network: regtest

# Number of signers for MuSig2 setup
num_signers: 2

# KeyMeld gateway URL
gateway_url: http://localhost:8080

# Bitcoin Core RPC connection settings
bitcoin_rpc_url: http://localhost:18443
bitcoin_rpc_auth:
  username: your_rpc_username
  password: your_rpc_password

# Directory for storing key files (auto-generated if missing)
key_files_dir: "./keys"
